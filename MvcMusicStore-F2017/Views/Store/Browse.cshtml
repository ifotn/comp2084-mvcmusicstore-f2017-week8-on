@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MvcMusicStore_F2017.Models.Genre

<h2>Albums for: @Model.Name</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>Title</th>
        <th>Artist</th>
        <th>Price</th>
        <td>Add To Cart</td>
    </tr>

    @foreach (var a in Model.Albums)
    {
        <tr>
            <td>@a.Title</td>
            <td>@a.Artist.Name</td>
            <td>@String.Format("{0:c}", a.Price)</td>
            <td>@Html.ActionLink("Add To Cart", "AddToCart", "ShoppingCart", new { Id = a.AlbumId }, null)</td>
        </tr>
    }
</table> 


