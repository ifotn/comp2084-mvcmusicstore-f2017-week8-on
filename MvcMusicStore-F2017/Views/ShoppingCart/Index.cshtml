@model MvcMusicStore_F2017.Models.ShoppingCartViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shopping Cart</h2>

@if (Model.CartItems.Count == 0)
{
    <h4>Your Cart is Empty. Please use the Store link above to Start Shopping.</h4>
}
else { 
    <table class="table table-striped table-hover">
        <tr>
            <th>Album</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Album.Title</td>
                <td>@String.Format("{0:c}", item.Album.Price)</td>
                <td>@item.Count</td>
                <td>@Html.ActionLink("Remove", "RemoveFromCart", "ShoppingCart", new { Id = item.AlbumId }, null)</td>
            </tr>
        }
        <tr>
            <td>Total</td>
            <td>@String.Format("{0:c}", Model.CartTotal)</td>
            <td></td>
            <td>@Html.ActionLink("Checkout >>", "Checkout", "ShoppingCart")</td>
        </tr>
    </table>
}
